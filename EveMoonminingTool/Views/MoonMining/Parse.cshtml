@{
    ViewData["Title"] = "Welcome";
}

@model IEnumerable<EveMoonminingTool.Models.MiningJob>

<h2>Moonmining Parser</h2>


<p>@ViewData["Message"]</p>

<ul>
    @for (int i = 0; i < (int)ViewData["LineCount"] - 1; i++)
    {
        @for (int j = 0; j < 9; j++)
        {
            <li> @ViewData["Line" + i + ";" + j]</li>
        }
    }
</ul>

